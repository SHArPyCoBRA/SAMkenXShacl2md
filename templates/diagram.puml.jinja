@startuml
!theme vibrant
skinparam classFontSize 14
!define LIGHTORANGE
skinparam componentStyle uml2
skinparam wrapMessageWidth 100
' skinparam ArrowColor #Maroon
' Remove shadows
skinparam shadowing false
'skinparam linetype polyline
skinparam ArrowMessageAlignment left

{# legend top right
{% for prefix, ns in namespaces %}
{{prefix}}: {{ns}}
{% endfor %}
endlegend #}

{% for class in classes %}
class "<b>{{class.label}}</b> ({{class.shortname}})" as {{class.shortname|replace(":","_")}} [[#{{class.shortname|lower|urlencode}}]]
{% endfor %}

{% for class in classes %}
{% for superclass in class.superclasses %}
{{class.shortname|replace(":","_")}} --|> {{superclass.shortname|replace(":","_")}} #blue;line.dotted;text:blue
{% endfor %}

{% for property in class.properties %}
{% if 'classtype' in property %}
{{class.shortname|replace(":","_")}} --> "[{{property.min if property.min is not none else '0'}}..{{property.max if property.max is not none else 'n'}}]" {{property.classtype.shortname|replace(":","_")}} : {{property.label}} >
{% elif 'datatype' in property %}
{{class.shortname|replace(":","_")}} : {{property.label}} : <i>{{property.datatype.shortname}}</i> [{{property.min if property.min is not none else '0'}}..{{property.max if property.max is not none else 'n'}}]
{% endif %}
{% endfor %}

{% endfor %}

hide circle
hide methods
hide empty members
@enduml


